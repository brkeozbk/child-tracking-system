<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"

    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="243dp"
        android:layout_height="220dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"

        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vbslogo" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="309dp"
        android:layout_height="78dp"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="Veli Ekranına Hoşgeldiniz"
        android:textColor="@color/textcolor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />
    
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:scrollbarThumbVertical="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">


                    <Button
                        android:id="@+id/konumayarlari"
                        android:layout_width="290dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="50dp"
                        android:textSize="16sp"
                        android:background="@drawable/buttonshape"
                        android:text="Konum Ayarları"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />


                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/cocukbulmap"
                        android:layout_width="290dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="50dp"
                        android:textSize="16sp"
                        android:background="@drawable/buttonshape"
                        android:text="Çocuğum Şuanda Nerede"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </TableRow>



                <TableRow>

                    <Button
                        android:id="@+id/gotogoster"
                        android:layout_width="290dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="50dp"
                        android:text="Çocuk UID Göster"
                        android:background="@drawable/buttonshape"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/cikis"
                        android:layout_width="290dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="50dp"
                        android:textSize="16sp"
                        android:background="@drawable/buttonshape"
                        android:text="Çıkış"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />
                </TableRow>



            </TableLayout>
        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>