<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uid_olusturcocuk"
    android:background="@color/backgroundcolor">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="243dp"
        android:layout_height="220dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="100dp"

        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vbslogo" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="309dp"
        android:layout_height="78dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="17dp"
        android:gravity="center"

        android:text="Çocuk UID sini göster"

        android:textColor="@color/textcolor"
        android:textSize="25sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/cocukgosterText"
        android:layout_width="387dp"
        android:layout_height="37dp"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        />

    <Button
        android:id="@+id/cocukgosterButton"
        android:layout_width="200dp"
        android:layout_height="69dp"
        android:layout_marginTop="32dp"
        android:text="Uid Oluştur"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cocukgosterText" />

</androidx.constraintlayout.widget.ConstraintLayout>